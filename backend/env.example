# Ambiente
ENVIRONMENT=development
DEBUG=true

# API
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (separado por v√≠rgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://agendazap.com
ALLOWED_HOSTS=localhost,127.0.0.1,agendazap.com

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://agendazap:agendazap123@localhost:5432/agendazap
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=+14155238886

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@agendazap.com
FROM_NAME=AgendaZap

# n8n
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key

# Limites por plano
FREE_APPOINTMENTS_LIMIT=10
STARTER_MESSAGES_LIMIT=200
PRO_MESSAGES_LIMIT=500
ENTERPRISE_MESSAGES_LIMIT=1000

# Cache TTL (em segundos)
CACHE_TTL_AGENDA=3600
CACHE_TTL_SERVICES=86400
CACHE_TTL_TEMPLATES=0

# Upload de arquivos
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

